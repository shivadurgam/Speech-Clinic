<div class="row">
  <div class="col-md-12">
    <div id="calendar">
      <h2 id="month">
        <%= link_to calendar_path(date: @date - 1.month), class: "btn btn" do %>
         <strong><</strong> 
        <% end %>
        <%= "#{@date.strftime("%B")} #{@date.year}" %>
        <%= link_to calendar_path(date: @date + 1.month), class: "btn btn" do %>
         <strong>></strong>
        <% end %>
      </h2>
      <%= calendar @date do |date| %>
        <%= date.day %> <ul>
           <li>slot1</li>
          <li>slot2</li>
          <li>slot3</li>
        </ul>
        <% @appointments.each do |apmt| %>
           <ul>
             <% if apmt.date == date %>
              <li><%= apmt.user.email %></li>
             <% end %>
           </ul> 
         <% end %>
      <% end %>
    </div>
  </div>
</div>
